<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lineaLayout.image_header.layout_height"
    android:background="@drawable/bg_custom_layout_header"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageview.image.layout_height"
            android:contentDescription="@null"
            android:gravity="bottom" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/imageview.avatar.layout_width"
            android:layout_height="@dimen/imageview.avatar.layout_height"
            android:layout_alignBottom="@+id/imgBackground"
            android:contentDescription="@string/imageview.screen.description"
            android:gravity="bottom" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview.text.content" />
</LinearLayout>
