<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBlack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerShowVideos"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/viewPagerShowVideos"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleViewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                tools:text="Titlencwqldlqlq" />

            <TextView
                android:id="@+id/tvViewCountViewPager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorGrayLight"
                android:textSize="10dp"
                tools:text="Titlencwqldlqlq" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgArrowLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/viewPagerShowVideos"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/seletor_arrow"
            android:contentDescription="@null"
            android:src="@mipmap/ic_arrow_left" />

        <ImageView
            android:id="@+id/imgArrowRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/viewPagerShowVideos"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/seletor_arrow"
            android:contentDescription="@null"
            android:src="@mipmap/ic_arrow_right" />
    </RelativeLayout>

    <include layout="@layout/fab_layout"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButtonOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:backgroundTint="@color/colorRedLight"
        android:src="@mipmap/ic_option" />

</android.support.design.widget.CoordinatorLayout>
